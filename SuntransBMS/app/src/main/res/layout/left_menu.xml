<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffafefe3"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/id_Leftmenu_LL"
        android:layout_marginTop="20dp"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="#ffafefe3"
            >

            <ImageView
                android:id="@+id/id_Leftmenu_Iview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_80x"
                android:layout_marginLeft="90dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="互联网+智慧移动电话基站"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="电源在线管理系统"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/id_ImgV1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/internet_pto"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_ImgV1"
                android:text="外网控制"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <LinearLayout style="@style/common_horizontal_division_line_style"
            android:layout_marginLeft="90dp">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/id_ImgV2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"

                android:src="@drawable/internet_pto"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_ImgV2"
                android:text="内网控制"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <LinearLayout style="@style/common_horizontal_division_line_style"
            android:layout_marginLeft="90dp">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/id_ImgV3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/internet_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/id_ImgV3"
                android:text="内网配置"
                android:textColor="#000000"
                android:textSize="20sp" />

        </RelativeLayout>
        <LinearLayout style="@style/common_horizontal_division_line_style"
            android:layout_marginLeft="90dp">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/id_ImgV4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"

                android:src="@drawable/about"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_ImgV4"
                android:text="关于"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:src="@drawable/buttomimageabout"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>